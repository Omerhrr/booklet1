# Booklet ERP - Environment Configuration
# Copy to .env and fill in values

# ============================================
# APPLICATION
# ============================================
APP_NAME=Booklet
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-generate-with-python-secrets-token-urlsafe-32

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://booklet:booklet_password@localhost:5432/booklet
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_KEY=your-32-byte-fernet-encryption-key

# ============================================
# AI PROVIDERS (Optional)
# ============================================
AI_PROVIDER=zai
AI_API_KEY=your-ai-api-key

# ============================================
# EMAIL (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@booklet.com
SMTP_TLS=true

# ============================================
# PAGA PAYMENT GATEWAY (Nigeria)
# ============================================
PAGA_API_KEY=your-paga-api-key
PAGA_MERCHANT_ID=your-merchant-id
PAGA_WEBHOOK_SECRET=your-webhook-secret
PAGA_ENVIRONMENT=sandbox

# ============================================
# STRIPE (Optional - International)
# ============================================
STRIPE_API_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================
# SERVER
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=5000
